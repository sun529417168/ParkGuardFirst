<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/choose_person_groupImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:contentDescription="@null"
        android:src="@mipmap/ex_right" />

    <TextView
        android:id="@+id/choose_person_groupText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/choose_person_groupImage"
        android:gravity="center_vertical|left"
        android:textColor="#000000"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/choose_person_groupCheckBox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/selector"
        android:button="@null"
        android:focusable="false"
        android:gravity="center_vertical|right" />

    <TextView
        android:id="@+id/choose_person_groupNum"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/choose_person_groupCheckBox"
        android:gravity="center_vertical|right"
        android:textColor="#CCCCCC"
        android:textSize="16sp" />
</RelativeLayout>