<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="20dp"
                android:layout_marginLeft="25dp"
                android:background="@mipmap/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="26sp" />
        <!--分享-->
        <LinearLayout
            android:id="@+id/title_share"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_Share_ImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/share" />
        </LinearLayout>


        <!--搜索start-->
        <LinearLayout
            android:id="@+id/title_search"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/problem_addInfo"
            android:layout_toLeftOf="@+id/title_share"
            android:layout_toStartOf="@+id/title_share"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@mipmap/search" />
        </LinearLayout>
        <!--搜索end-->
        <!--主页面设置start-->
        <LinearLayout
            android:id="@+id/home_setter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_setter"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
        <!--主页面设置事件end-->
        <!--添加事件start-->
        <LinearLayout
            android:id="@+id/problem_addInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">


            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/add_task" />
        </LinearLayout>
        <!--添加事件end-->


        <!--保存start-->
        <LinearLayout
            android:id="@+id/title_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editor_sure"
                android:textColor="@color/white" />
        </LinearLayout>
        <!--保存end-->


        <!--设置按钮start-->
        <LinearLayout
            android:id="@+id/title_options"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/icon_settings" />
        </LinearLayout>
        <!--设置按钮end-->


    </RelativeLayout>

    <TextView
        android:id="@+id/title_net"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pale_pink"
        android:padding="10dp"
        android:text="@string/title_net"
        android:textColor="@color/black"
        android:visibility="gone" />
</LinearLayout>