<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="22dp"
    android:paddingRight="22dp">

    <TextView
        android:id="@+id/dialog_photo_album"
        android:layout_width="match_parent"
        android:layout_height="42dip"
        android:layout_marginTop="20dp"
        android:background="@drawable/sex_background"
        android:gravity="center"
        android:text="@string/photo_album"
        android:textColor="@color/blue2"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dialog_photo_camera"
        android:layout_width="match_parent"
        android:layout_height="42dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/sex_background"
        android:gravity="center"
        android:text="@string/photo_camera"
        android:textColor="@color/blue2"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dialog_photo_file"
        android:layout_width="match_parent"
        android:layout_height="42dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/sex_background"
        android:gravity="center"
        android:text="@string/photo_file"
        android:textColor="@color/blue2"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/dialog_photo_cancel"
        android:layout_width="match_parent"
        android:layout_height="42dip"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="8dip"
        android:background="@drawable/sex_background"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/blue2"
        android:textSize="18sp" />
</LinearLayout>